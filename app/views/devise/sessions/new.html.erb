<div class="one-page-inner one-grey">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="reg-page recent-activity">
        <div class="reg-header">
          <h2>管理登入</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'validate-form' }) do |f| %>
          <div class="form-group">
            <div class="controls">
              <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="icon-user"></i></span>
                <%= f.email_field :email, class: 'form-control', 'placeholder' => '電子信箱', data: { 'rule-required' => 'true' } %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="controls">
              <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="icon-lock"></i></span>
                <%= f.password_field :password, class: 'form-control', 'placeholder' => '密碼', data: { 'rule-required' => 'true' } %>
              </div>
            </div>
          </div>

          <hr>

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.button '登入', class: 'btn-u btn-block', type: 'submit' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>