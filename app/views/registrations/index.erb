<div class="one-page-inner one-grey">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="reg-page recent-activity">
        <div class="reg-header">
          <h2>查詢報名狀況</h2>
        </div>
        <%= form_tag registrations_path, class: 'form-horizontal validate-form', method: :get do %>
          <div class="input-group col-md-12">
            <%= text_field_tag 'team_name', params[:team_name], class: 'form-control', placeholder: '請輸入隊伍名稱關鍵字' %>
            <span class="input-group-btn">
              <button type="submit" class="btn-u">
                <i class="icon-search"></i>
              </button>
            </span>
          </div>
        <% end %>
        <ul class="list-unstyled comments list-hover list-striped">
          <% @registrations.each do |registration| %>
            <li class="row">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-10">
                    <h4>
                      <i class="icon-group"></i>
                      <%= registration.team_name %>
                    </h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '詳細', registration, class: 'btn btn-u pull-right' %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>